<% if (skills && skills.length>0) { %>

<div
  class="section"
  style="
    border-top: 1px solid #ccc;
    width: 850px;

    margin: 1em 0;
    padding: 1em;
    padding-bottom: 1em;
    padding-bottom: 0px;
  "
>
  <h2
    style="
      float: left;
      font-size: 20px;
      line-height: 24px;
      font-variant: small-caps;
      letter-spacing: 0.06em;
    "
  >
    Skills
  </h2>
  <div
    class="content"
    style="width: 37em; margin: 0 0 0 16em; margin-left: 230px"
  >
    <ul>
      <% for( let i = 0; i < skills.length; i++ ) { %>
      <li style="line-height: 24px"><%=skills[i]%></li>
      <% } %>
    </ul>
  </div>
</div>
<% } %>
